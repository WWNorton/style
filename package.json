{
  "name": "eslint-config-norton",
  "version": "3.0.0",
  "description": "ESLint shareable config for the Norton JavaScript style guide",
  "keywords": [
    "code",
    "eslint",
    "lint",
    "linter",
    "quality",
    "style"
  ],
  "homepage": "https://gitlab.com/wwnorton/style/eslint-config-norton",
  "bugs": {
    "url": "https://gitlab.com/wwnorton/style/eslint-config-norton/issues"
  },
  "license": "MIT",
  "author": "Evan Yamanishi",
  "files": [
    ".eslintignore",
    ".eslintrc.js",
    "index.js",
    "rules",
    "test"
  ],
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "git@gitlab.com:wwnorton/style/eslint-config-norton.git"
  },
  "scripts": {
    "lint": "eslint .",
    "lint:fix": "npm run lint -- --fix",
    "release": "standard-version",
    "test": "ava"
  },
  "dependencies": {
    "eslint-config-airbnb-base": "^14.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.1.0",
    "@commitlint/config-conventional": "^8.1.0",
    "ava": "^2.2.0",
    "eslint": "^6.1.0",
    "eslint-plugin-import": "^2.18.2",
    "husky": "^3.0.3",
    "lint-staged": "^9.2.1",
    "standard-version": "^7.0.0"
  },
  "peerDependencies": {
    "eslint": "^4.19.1 || ^5.3.0",
    "eslint-plugin-import": "^2.14.0"
  },
  "ava": {
    "helpers": [
      "**/{fixtures,helpers}/**/*"
    ],
    "failWithoutAssertions": false,
    "serial": true
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged",
      "pre-push": "npm test"
    }
  },
  "lint-staged": {
    "*.{js,jsx}": "eslint"
  }
}
