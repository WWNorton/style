{
  "name": "eslint-config-norton",
  "version": "3.1.0",
  "description": "ESLint shareable config for the Norton JavaScript style guide",
  "keywords": [
    "code",
    "eslint",
    "lint",
    "linter",
    "quality",
    "style"
  ],
  "homepage": "https://gitlab.com/wwnorton/style/eslint-config-norton",
  "bugs": {
    "url": "https://gitlab.com/wwnorton/style/eslint-config-norton/issues"
  },
  "repository": {
    "type": "git",
    "url": "git@gitlab.com:wwnorton/style/eslint-config-norton.git"
  },
  "license": "MIT",
  "author": "Evan Yamanishi <eyamanishi@wwnorton.com>",
  "main": "index.js",
  "files": [
    "index.js",
    "rules"
  ],
  "scripts": {
    "lint": "eslint .",
    "lint:fix": "npm run lint -- --fix",
    "release": "standard-version",
    "test": "ava"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-push": "npm test"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "*.{js,jsx}": "eslint"
  },
  "ava": {
    "files": [
      "test/*.js"
    ],
    "require": [
      "esm"
    ]
  },
  "dependencies": {
    "eslint-config-airbnb-base": "^14.2.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^9.1.2",
    "@commitlint/config-conventional": "^9.1.2",
    "ava": "^3.10.1",
    "eslint": "^7.4.0",
    "eslint-plugin-import": "^2.22.0",
    "esm": "^3.2.25",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.11",
    "standard-version": "^8.0.2"
  }
}
