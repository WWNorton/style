{
  "name": "stylelint-config-norton",
  "version": "1.1.4",
  "private": true,
  "description": "Stylelint shareable config for the Norton stylesheet guide",
  "keywords": [
    "css",
    "lint",
    "sass",
    "scss",
    "style",
    "stylelint",
    "stylelint-config"
  ],
  "homepage": "https://gitlab.com/wwnorton/style/stylelint-config-norton",
  "bugs": {
    "url": "https://gitlab.com/wwnorton/style/stylelint-config-norton/issues"
  },
  "license": "UNLICENSED",
  "author": "Evan Yamanishi",
  "files": [
    ".stylelintignore",
    "build.js",
    "index.js",
    "test"
  ],
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "git@gitlab.com:wwnorton/style/stylelint-config-norton.git"
  },
  "scripts": {
    "build": "node build",
    "lint": "npm run lint:es",
    "lint:es": "eslint .",
    "lint:fix": "npm run lint:es -- --fix",
    "lint:style": "node build && stylelint test/fixtures/*.scss",
    "prepublishOnly": "nsp check",
    "report": "nyc report --reporter=html",
    "test": "nyc ava",
    "preversion": "npm run lint",
    "postversion": "git push && git push --tags"
  },
  "dependencies": {
    "lodash.merge": "^4.6.0",
    "stylelint-config-sass-guidelines": "^4.0.1",
    "stylelint-config-standard": "^18.0.0",
    "stylelint-order": "^0.8.0",
    "stylelint-scss": "^2.2.0"
  },
  "devDependencies": {
    "ava": "^0.24.0",
    "eslint": "^4.9.0",
    "eslint-config-norton": "git+ssh://git@gitlab.com/wwnorton/style/eslint-config-norton.git#v1.2.0",
    "nyc": "^11.4.1",
    "stylelint": "^8.4.0"
  },
  "peerDependencies": {
    "stylelint": "^8.2.0"
  },
  "ava": {
    "files": [
      "test"
    ],
    "failWithoutAssertions": false,
    "serial": true,
    "verbose": true
  }
}
