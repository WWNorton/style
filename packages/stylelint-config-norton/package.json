{
  "name": "stylelint-config-norton",
  "version": "2.2.1",
  "description": "Stylelint shareable config for the Norton stylesheet guide",
  "keywords": [
    "css",
    "lint",
    "sass",
    "scss",
    "style",
    "stylelint",
    "stylelint-config"
  ],
  "homepage": "https://gitlab.com/wwnorton/style/stylelint-config-norton",
  "bugs": {
    "url": "https://gitlab.com/wwnorton/style/stylelint-config-norton/issues"
  },
  "license": "MIT",
  "author": "Evan Yamanishi",
  "files": [
    ".stylelintignore",
    "build.js",
    "src",
    "test"
  ],
  "main": "src/sass.js",
  "repository": {
    "type": "git",
    "url": "git@gitlab.com:wwnorton/style/stylelint-config-norton.git"
  },
  "scripts": {
    "build": "node build",
    "lint": "npm run lint:es",
    "lint:es": "eslint .",
    "lint:fix": "npm run lint:es -- --fix",
    "lint:style": "npm run build && stylelint test/fixtures/*.scss",
    "prerelease": "npm test",
    "release": "standard-version",
    "test": "ava"
  },
  "dependencies": {
    "lodash.merge": "^4.6.1",
    "stylelint-config-sass-guidelines": "^6.1.0",
    "stylelint-config-standard": "^19.0.0",
    "stylelint-order": "^3.1.1",
    "stylelint-scss": "^3.12.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.2.0",
    "@commitlint/config-conventional": "^8.2.0",
    "ava": "^2.4.0",
    "eslint": "^6.5.1",
    "eslint-config-norton": "^3.0.1",
    "eslint-plugin-import": "^2.18.2",
    "husky": "^3.0.8",
    "lint-staged": "^9.4.2",
    "standard-version": "^7.0.0",
    "stylelint": "^11.0.0"
  },
  "peerDependencies": {
    "stylelint": "^11.0.0"
  },
  "ava": {
    "helpers": [
      "**/helpers/**/*"
    ],
    "failWithoutAssertions": false
  },
  "lint-staged": {
    "*.{js,jsx}": "eslint"
  }
}
