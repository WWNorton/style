{
  "name": "stylelint-config-norton",
  "version": "2.0.1",
  "description": "Stylelint shareable config for the Norton stylesheet guide",
  "keywords": [
    "css",
    "lint",
    "sass",
    "scss",
    "style",
    "stylelint",
    "stylelint-config"
  ],
  "homepage": "https://gitlab.com/wwnorton/style/stylelint-config-norton",
  "bugs": {
    "url": "https://gitlab.com/wwnorton/style/stylelint-config-norton/issues"
  },
  "license": "MIT",
  "author": "Evan Yamanishi",
  "files": [
    ".stylelintignore",
    "build.js",
    "src",
    "test"
  ],
  "main": "src/sass.js",
  "repository": {
    "type": "git",
    "url": "git@gitlab.com:wwnorton/style/stylelint-config-norton.git"
  },
  "scripts": {
    "build": "node build",
    "lint": "npm run lint:es",
    "lint:es": "eslint .",
    "lint:fix": "npm run lint:es -- --fix",
    "lint:style": "npm run build && stylelint test/fixtures/*.scss",
    "release": "standard-version",
    "test": "ava"
  },
  "dependencies": {
    "lodash.merge": "^4.6.1",
    "stylelint-config-primer": "^7.0.0",
    "stylelint-config-sass-guidelines": "^6.0.0",
    "stylelint-config-standard": "^18.3.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^7.6.1",
    "@commitlint/config-conventional": "^7.6.0",
    "ava": "^1.4.1",
    "eslint": "^5.16.0",
    "eslint-config-norton": "^2.0.2",
    "eslint-plugin-import": "^2.17.3",
    "husky": "^1.3.1",
    "lint-staged": "^8.2.1",
    "standard-version": "^4.4.0",
    "stylelint": "^10.1.0"
  },
  "peerDependencies": {
    "stylelint": "^9.0.0"
  },
  "ava": {
    "files": [
      "test"
    ],
    "failWithoutAssertions": false
  },
  "lint-staged": {
    "*.{js,jsx}": "eslint"
  }
}
