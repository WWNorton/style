{
  "name": "stylelint-config-norton",
  "version": "1.2.3",
  "description": "Stylelint shareable config for the Norton stylesheet guide",
  "keywords": [
    "css",
    "lint",
    "sass",
    "scss",
    "style",
    "stylelint",
    "stylelint-config"
  ],
  "homepage": "https://gitlab.com/wwnorton/style/stylelint-config-norton",
  "bugs": {
    "url": "https://gitlab.com/wwnorton/style/stylelint-config-norton/issues"
  },
  "license": "MIT",
  "author": "Evan Yamanishi",
  "files": [
    ".stylelintignore",
    "build.js",
    "index.js",
    "rules",
    "test"
  ],
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "git@gitlab.com:wwnorton/style/stylelint-config-norton.git"
  },
  "scripts": {
    "build": "node build",
    "lint": "npm run lint:es",
    "lint:es": "eslint .",
    "lint:fix": "npm run lint:es -- --fix",
    "lint:style": "npm run build && stylelint test/fixtures/*.scss",
    "prepublishOnly": "nsp check",
    "report": "nyc report --reporter=html",
    "test": "nyc ava",
    "preversion": "npm run lint",
    "postversion": "git push && git push --tags"
  },
  "dependencies": {
    "lodash.merge": "^4.6.0",
    "stylelint-config-sass-guidelines": "^5.0.0",
    "stylelint-config-standard": "^18.0.0"
  },
  "devDependencies": {
    "ava": "^0.25.0",
    "eslint": "^4.9.0",
    "eslint-config-norton": "^1.2.2",
    "eslint-plugin-import": "^2.11.0",
    "nsp": "^3.2.1",
    "nyc": "^11.7.2",
    "stylelint": "^9.2.0",
    "stylelint-order": "^0.8.0",
    "stylelint-scss": "^3.1.0"
  },
  "peerDependencies": {
    "stylelint": "^9.2.0",
    "stylelint-order": "^0.8.0",
    "stylelint-scss": "^3.1.0"
  },
  "ava": {
    "files": [
      "test"
    ],
    "failWithoutAssertions": false
  }
}
