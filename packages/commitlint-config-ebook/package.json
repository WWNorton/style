{
  "name": "commitlint-config-ebook",
  "version": "0.2.0",
  "description": "commitlint shareable config for Norton ebook git commit standards",
  "main": "index.js",
  "scripts": {
    "lint": "eslint .",
    "release": "standard-version",
    "report": "nyc report --reporter=html",
    "test": "nyc ava"
  },
  "repository": {
    "type": "git",
    "url": "git@gitlab.com:wwnorton/style/commitlint-config-ebook.git"
  },
  "keywords": [
    "code",
    "lint",
    "commitlint",
    "linter",
    "quality",
    "git"
  ],
  "author": "Evan Yamanishi",
  "license": "MIT",
  "devDependencies": {
    "@commitlint/lint": "^7.0.0",
    "@commitlint/load": "^7.0.0",
    "ava": "^0.25.0",
    "eslint": "^4.19.1",
    "eslint-config-norton": "^1.2.2",
    "eslint-plugin-import": "^2.13.0",
    "husky": "^1.0.0-rc.13",
    "nyc": "^12.0.2",
    "standard-version": "^4.4.0"
  },
  "dependencies": {
    "@commitlint/config-conventional": "^7.0.1"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "npm run lint",
      "pre-push": "npm test"
    }
  }
}
